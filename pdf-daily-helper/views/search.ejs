<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>

<main class="container mt-4" role="main">
  <h1>Advanced PDF Search</h1>

  <form id="searchForm" class="mt-4">
    <div class="row g-3">
      <div class="col-md-6">
        <input type="text" class="form-control" id="searchQuery" name="query" placeholder="Enter your search query" required>
      </div>
      <div class="col-md-3">
        <select class="form-select" id="dateFilter" name="dateFilter">
          <option value="">Any time</option>
          <option value="1d">Past 24 hours</option>
          <option value="7d">Past week</option>
          <option value="30d">Past month</option>
          <option value="365d">Past year</option>
        </select>
      </div>
      <div class="col-md-3">
        <input type="text" class="form-control" id="fileNameFilter" name="fileNameFilter" placeholder="Filter by file name">
      </div>
    </div>
    <div class="row g-3 mt-2">
      <div class="col-md-6">
        <input type="number" class="form-control" id="pageNumberFilter" name="pageNumberFilter" placeholder="Filter by page number">
      </div>
      <div class="col-md-6">
        <button class="btn btn-primary w-100" type="submit">Search</button>
      </div>
    </div>
  </form>

  <div id="searchResults" class="mt-4">
    <!-- Search results will be displayed here -->
  </div>

  <nav aria-label="Search results pages">
    <ul class="pagination justify-content-center" id="pagination">
      <!-- Pagination will be displayed here -->
    </ul>
  </nav>
</main>

<%- include('partials/_footer.ejs') %>
<script src="/js/search.js"></script>
</body>
</html>